  <title>Change your password</title>
{{/section}}

<header role='banner'>
  <div id='cd-logo'><a href='/'><img
        src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/148866/cd-logo_1.svg'
        alt='Logo'
      /></a></div>

  <nav class='main-nav'>
    <ul>
      <li><a class='cd-signin' href='/'>Home</a></li>
    </ul>
  </nav>
</header>
<div id='container'>
  <div class='form-wrapper'>
    <form>
      <h2 class='form-item'>Enter this form to reset your password</h2>
      <div class='form-item'>
        <label>Code (in your email)</label>
        <input
          id='oldPassword'
          type='text'
          name='code'
          class='form-control input_pass'
          value=''
          placeholder='Verify code'
          required
        />

      </div>
      <div class='form-item'>
        <label>New Password</label>
        <input
          id='newPassword'
          type='password'
          name='newPassword'
          class='form-control input_pass'
          value=''
          placeholder='New password'
          required
          minlength='6'
          maxlength='10'
        />
        <a href='#' class='hide-password'>Show</a>

      </div>
      <div class='form-item'>
        <label>Confirm New Password</label>
        <input
          id='confirmNewPassword'
          type='password'
          name='confirmNewPassword'
          class='form-control input_pass'
          value=''
          placeholder='Confirm new password'
          required
          minlength='6'
          maxlength='10'
        />
        <a href='#' class='hide-password'>Show</a>

      </div>
      <div class='form-item'><button
          type='submit'
          style='max-width: 200px'
        >Reset Password</button>
        <div><a href='/login'>Back to login</a></div></div>
    </form>
  </div>
</div>