{{/section}}
<header role='banner'>
  <div id='cd-logo'><a href='/'><img
        src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/148866/cd-logo_1.svg'
        alt='Logo'
      /></a></div>

  <nav class='main-nav'>
    <ul>
      <li><a class='cd-signin' href='/profile'>Profile</a></li>
      <li><a class='cd-signin' href='/changeAvatar'>Change Avatar</a></li>
      <li><a class='cd-signup' href='/api/auth/logout'>Logout</a></li>
    </ul>
  </nav>
</header>
<div id='container'>
  <div class="form-wrapper">
    <form>
      <h2 class='form-item'>Update form to modify your todo</h2>
      <div class='form-item'>
        <label>New task name 🎁</label>
        <input required type='hidden' value='{{todo.id}}' name='id' />
        <input
          required
          type='text'
          value='{{todo.task_name}}'
          name='newTaskName'
        />
      </div>
      <div class='form-item'>
        <label>New deadline 💀</label>
        <input
          required
          type='datetime-local'
          value='{{todo.deadline_date}}'
          name='newDeadline'
        />
      </div>
      <div class='form-item'><button class='updateTodo' type='submit'>Save</button></div>
    </form>
  </div>
</div>