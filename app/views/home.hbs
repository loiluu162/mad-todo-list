<header role='banner'>
  <div id='cd-logo'><a href='/'><img
        src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/148866/cd-logo_1.svg'
        alt='Logo'
      /></a></div>

  <nav class='main-nav'>
    <ul>
      <li><a class='cd-signin' href='/profile'>Profile</a></li>
      <li><a class='cd-signup' href='/api/auth/logout'>Logout</a></li>
    </ul>
  </nav>
</header>
<div id='container'>
  <div class='navbar-btn'>
    <button class='to-completed'>
      <a href='/completed'>Completed</a>
    </button>
    <button class='to-uncompleted'>
      <a href='/uncompleted'>Uncompleted</a>
    </button>
    <button class='to-calendar'>
      <a href='/calendar'>On Calendar</a>
    </button>
  </div>
  <div class='container__new-todo'>
    <form>
      <div class="form-item">
        <label for='taskName'>New task name 🎁</label>
        <input type='text' name='taskName' required />
      </div>
      <div class="form-item">
        <label for='deadline'>Deadline 💀</label>
        <input type='datetime-local' name='deadline' required />
      </div>
      <div class="form-item"><button class='updateTodo' type='submit' id='add-new-todo'>Add</button></div>
    </form>
  </div>
  
  <div class='container__todo-list'>
    <div class='all'>
      <h2>All your todos</h2>
      <ul class='all__list'></ul>
    </div>
    
  </div>
</div>