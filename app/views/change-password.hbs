  <title>Change your password</title>
{{/section}}

<header role='banner'>
  <div id='cd-logo'><a href='/'><img
        src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/148866/cd-logo_1.svg'
        alt='Logo'
      /></a></div>

  <nav class='main-nav'>
    <ul>
      <li><a class='cd-signin' href='/profile'>Profile</a></li>
      <li><a class='cd-signin' href='/changeAvatar'>Change Avatar</a></li>
      <li><a class='cd-signup' href='/api/auth/logout'>Logout</a></li>
    </ul>
  </nav>
</header>
<div id='container'>
  <form>
  <h3 class='form-item'>Enter this form to change your password</h3>
    <div class='form-item'>
      <label>Current Password</label>
      <input
        id='oldPassword'
        type='password'
        name='oldPassword'
        class='form-control input_pass'
        value=''
        placeholder='Current password'
        required
        minlength='6'
        maxlength='10'
      />
    </div>
    <div class='form-item'>
      <label>New Password</label>
      <input
        id='newPassword'
        type='password'
        name='newPassword'
        class='form-control input_pass'
        value=''
        placeholder='New password'
        required
        minlength='6'
        maxlength='10'
      />
    </div>
    <div class='form-item'>
      <label>Confirm New Password</label>
      <input
        id='confirmNewPassword'
        type='password'
        name='confirmNewPassword'
        class='form-control input_pass'
        value=''
        placeholder='Confirm new password'
        required
        minlength='6'
        maxlength='10'
      />
    </div>
    <div class='form-item'><button type='submit' style="max-width: 200px">Change Password</button>
      <div><a href='/'>Go home</a></div></div>
  </form>
</div>